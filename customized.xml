<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:elevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="253dp"
        android:orientation="vertical"
        android:padding="16dp">


        <RatingBar
            android:id="@+id/rating"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="73dp"
            android:layout_toEndOf="@+id/txtlong" />


        <TextView
            android:id="@+id/txtlong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/txtlat"
            android:layout_marginTop="25dp"
            android:text="Long:" />

        <ImageView
            android:id="@+id/postimage"
            android:layout_width="119dp"
            android:layout_height="122dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/Heading"
            style="@style/Base.TextAppearance.AppCompat.Title"
            android:layout_width="315dp"
            android:layout_height="33dp"
            android:layout_above="@+id/snippet"
            android:layout_centerHorizontal="true"
            android:ellipsize="end"
            android:maxLines="1" />

        <TextView
            android:id="@+id/lat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/postimage" />

        <TextView
            android:id="@+id/longitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/Heading"
            android:layout_alignTop="@+id/txtlong" />

        <TextView
            android:id="@+id/snippet"
            style="@style/Base.TextAppearance.AppCompat.Body2"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:ellipsize="end"
            android:maxLines="2" />

        <TextView
            android:id="@+id/txtlat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/postimage"
            android:layout_marginEnd="105dp"
            android:text="Lat:" />

        <Button
            android:id="@+id/navigate"
            style="@android:style/Widget.DeviceDefault.Button.Inset"
            android:layout_width="93dp"
            android:layout_height="37dp"
            android:layout_above="@+id/Heading"
            android:layout_marginStart="-126dp"
            android:layout_toEndOf="@+id/txtlat"
            android:text="Navigate" />

    </RelativeLayout>


</android.support.v7.widget.CardView>