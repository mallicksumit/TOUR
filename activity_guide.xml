<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Guide">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/photo1"
        android:layout_width="90dp"
        android:layout_height="72dp"
        android:layout_alignParentTop="true"

        android:layout_marginTop="74dp"
        android:src="@drawable/ic_menu_camera" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/photo2"
        android:layout_width="90dp"
        android:layout_height="72dp"
        android:layout_alignParentTop="true"
        android:layout_alignTop="@+id/photo1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="74dp"
        android:src="@drawable/ic_menu_camera" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/photo3"
        android:layout_width="90dp"
        android:layout_height="72dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/photo1"
        android:src="@drawable/ic_menu_camera" />

    <EditText
        android:id="@+id/placename"
        android:layout_width="349dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="220dp"
        android:background="@drawable/edt"
        android:drawableLeft="@drawable/ic_place_black_24dp"
        android:hint="Place Name"
        android:inputType="text" />

    <EditText
        android:id="@+id/vicinityname"
        android:layout_width="349dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="209dp"
        android:background="@drawable/edt"
        android:drawableLeft="@drawable/ic_beach_access_black_24dp"
        android:hint="Vicinity"
        android:inputType="text" />

    <EditText
        android:id="@+id/latitude"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/placename"
        android:layout_marginBottom="109dp"
        android:background="@drawable/edt"
        android:drawableLeft="@drawable/ic_person_black_24dp"
        android:hint="Location"
        android:inputType="text" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/placename"
        android:layout_alignTop="@+id/latitude"
        android:background="@drawable/button"
        android:text="get"
        android:id="@+id/btnlat"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="26dp"
        android:background="@drawable/button"
        android:id="@+id/placebutton"
        android:text="Submit for Verification" />

</RelativeLayout>